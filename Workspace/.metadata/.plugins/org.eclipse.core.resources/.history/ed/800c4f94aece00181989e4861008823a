package logic;

import java.lang.reflect.Array;

public class Vigenere {

	private String[][] table = new String[28][28];
	
	private String[] alphabet = new String[27];
	
	private String key = "";
	
	public Vigenere(){
		initialize();
		
		//Uncomment the line below to verify the Vigenere Square using
		//the stdout
		
		//verify();
	}
	
	public static void main(String[] args) {
		Vigenere cypher = new Vigenere();
	}
	
	private void initialize(){
		//Alfabeto
		alphabet[0] = "A";
		alphabet[1] = "B";
		alphabet[2] = "C";
		alphabet[3] = "D";
		alphabet[4] = "E";
		alphabet[5] = "F";
		alphabet[6] = "G";
		alphabet[7] = "H";
		alphabet[8] = "I";
		alphabet[9] = "J";
		alphabet[10] = "K";
		alphabet[11] = "L";
		alphabet[12] = "M";
		alphabet[13] = "N";
		alphabet[14] = "Ñ";
		alphabet[15] = "O";
		alphabet[16] = "P";
		alphabet[17] = "Q";
		alphabet[18] = "R";
		alphabet[19] = "S";
		alphabet[20] = "T";
		alphabet[21] = "U";
		alphabet[22] = "V";
		alphabet[23] = "W";
		alphabet[24] = "X";
		alphabet[25] = "Y";
		alphabet[26] = "Z";
		
		//Table
		for(int i=0; i<27; i++){
			for(int j=0; j<27; j++){
				table[i][j] = alphabet[(j+i)%27];
			}
		}
	}
	
	private void verify(){
		//Alphabet
		System.out.print("[");
		for(int i=0; i<26; i++)
			System.out.print(alphabet[i] + ", ");
		System.out.println(alphabet[26] + "]");
		
		System.out.println("-------------------------------------");
		for(int i=0; i<27; i++){
			System.out.println();
			for(int j=0; j<27; j++){
				System.out.print(table[i][j]);
			}
		}
	}
}
